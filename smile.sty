\newcommand\isempty[1]{\relax\detokenize{#1}\relax}

\newcommand\smile@ensurehelper[4]{%
	\expandafter\gdef\csname #4@#1\endcsname{#3}%
	\if\isempty{#2}%
		\expandafter\gdef\csname #4@short#1\endcsname{#3}%
	\else%
		\expandafter\gdef\csname #4@short#1\endcsname{#2}%
	\fi%
}
\def\smile@infoscope{}
\newcommand\ensureinfocommand[2][]{%
	\ifcsname#2\endcsname%
		\expandafter\renewcommand\csname#2\endcsname[2][]{\smile@ensurehelper{#2}{##1}{##2}{#1}}%
	\else%
		\expandafter\newcommand\csname#2\endcsname[2][]{\smile@ensurehelper{#2}{##1}{##2}{#1}}%
	\fi%
}


